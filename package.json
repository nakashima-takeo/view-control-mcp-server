{
  "name": "view-control-mcp-server",
  "version": "1.2.0",
  "description": "MCP (Master Control Program) サーバー - ローカルPCの操作、マウスクリック、画面キャプチャなどを行うためのサーバー",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "view-control-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "build:proto": "tsc",
    "start:proto": "node dist/proto/mcp-server-prototype.js",
    "build:sdk": "tsc",
    "start:sdk": "node dist/index.js"
  },
  "keywords": [
    "automation",
    "robotjs",
    "screenshot",
    "mcp",
    "control"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/view-control-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "jest": "^29.7.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
